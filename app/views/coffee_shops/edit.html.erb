<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit coffee_shop</h1>
    <% if @coffee_shop.persisted? %>
    <%= button_to 'Destroy', @coffee_shop, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', coffee_shop: @coffee_shop %>
</div>
